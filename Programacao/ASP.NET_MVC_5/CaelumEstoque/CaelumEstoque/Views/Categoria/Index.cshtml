@model IList<CaelumEstoque.Models.CategoriaDoProduto>
<div>
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Descrição</th>
            </tr>
        </tbody>
        <tbody>
            @foreach (var categoria in Model)
            {
                <tr>
                    <td>@categoria.Id</td>
                    <td>@Html.ActionLink(@categoria.Nome, "Visualizar", new { id = @categoria.Id })</td>
                    <td>@categoria.Descricao</td>
                </tr>
            }
        </tbody>
    </table>
</div>